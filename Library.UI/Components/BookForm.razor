@using Library.Shared

<EditForm Model="Book" OnValidSubmit="() => OnValidSubmit()">
	<DataAnnotationsValidator />

    <div>
        <label class="form-label">Title</label>
        <InputText @bind-Value="@Book.Title" class="form-input" />
        <ValidationMessage For="() => Book.Title" />
    </div>
    <div>
        <label class="form-label">Author</label>
        <InputText @bind-Value="@Book.Author" class="form-input" />
        <ValidationMessage For="() => Book.Author" />
    </div>
    <div>
        <label class="form-label">Publisher</label>
        <InputText @bind-Value="@Book.Publisher" class="form-input" />
        <ValidationMessage For="() => Book.Publisher" />
    </div>
    <div class="mb-3">
        <label class="form-label">Date</label>
        <InputDate @bind-Value="@Book.Date" class="form-input" />
        <ValidationMessage For="() => Book.Date" />
    </div>

    <button class="btn btn-primary" type="submit">@ButtonText</button>
</EditForm>

@code {
    [Parameter]
    public Book Book { get; set; }

    [Parameter]
    public Func<Task> OnValidSubmit { get; set; }

    [Parameter]
    public string ButtonText { get; set; }
}